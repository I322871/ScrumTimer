{
    "name": "Scrum Timer",
    "version": "1.2",
    "description": "Scrum Timer",
    "permissions": ["storage", "declarativeContent"],
    "options_page": "options.html",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/panda.png",
        "32": "img/panda.png",
        "48": "img/panda.png",
        "128": "img/panda.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://sapjira.wdf.sap.corp/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
    "icons": {
      "16": "img/panda.png",
      "32": "img/panda.png",
      "48": "img/panda.png",
      "128": "img/panda.png"
    },
    "manifest_version": 2
}